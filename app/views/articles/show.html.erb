<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<!-- Comments are below -->

<h2>Comments</h2>
<% @article.comments.each do |c| %>
    <p>
      <%= c.commenter %><em> said:</em>
    </p>
    <p>
      <%= c.body %>
    </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to "Edit", edit_article_path(@article) %> | 
<%= link_to "Back", articles_path %>